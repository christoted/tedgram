<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:layout_margin="8dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/bg_caption"/>

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:orientation="horizontal"
        android:layout_marginTop="6dp">

        <Button
            android:id="@+id/btnLike"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_favorite_border_24"/>

        <Button
            android:id="@+id/btnCommand"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_mode_comment_24"
            android:layout_toRightOf="@id/btnLike"
            android:layout_marginLeft="6dp"/>

        <Button
            android:id="@+id/btnBookmarked"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_bookmark_border_24"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="6dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:text="@string/large_text"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        style="@style/TextSubTitleStyle"/>

    <TextView
        android:id="@+id/tvCommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCaption"
        android:text="0 Comments"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        style="@style/TextSubTitleStyle"/>

</RelativeLayout>